#!/usr/bin/env ruby
require "jstdutil"
require "watchr"
#require "jstdutil/autotest"
#JsTestDriver::JsAutoTest::Cli.run($*) if __FILE__ == $0

absolute_path = Pathname(File.join(Jstdutil.install_dir, "watchr_script"))
